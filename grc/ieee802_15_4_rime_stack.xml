<?xml version="1.0"?>
<block>
  <name>RIME Stack</name>
  <key>ieee802_15_4_rime_stack</key>
  <category>[IEEE802.15.4]</category>
  <import>import ieee802_15_4</import>
  <make>ieee802_15_4.rime_stack($debug, $routing, $bc_channels, $uc_channels, 
  $ruc_channels, $rime_add, $default_route)</make>
  
    <param>
        <name>Debug</name>
        <key>debug</key>
        <value>True</value>
        <type>bool</type>
    
        <option>
            <name>Enable</name>
            <key>True</key>
        </option>
        <option>
            <name>Disable</name>
            <key>False</key>
        </option>
    </param>
    
    <param>
        <name>Routing</name>
        <key>routing</key>
        <value>True</value>
        <type>bool</type>
    
        <option>
            <name>Enable</name>
            <key>True</key>
        </option>
        <option>
            <name>Disable</name>
            <key>False</key>
        </option>
    </param>

  <param>
    <name>Broadcast Channels</name>
    <key>bc_channels</key>
    <value>[129]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>Unicast Channels</name>
    <key>uc_channels</key>
    <value>[130]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>Reliable Unicast Channels</name>
    <key>ruc_channels</key>
    <value>[131]</value>
    <type>int_vector</type>
  </param>

  <param>
    <name>RIME Address</name>
    <key>rime_add</key>
    <value>[23,42]</value>
    <type>int_vector</type>
  </param>
  
  <param>
    <name>Default route (MAC)</name>
    <key>default_route</key>
    <value>[1,2]</value>
    <type>int_vector</type>
  </param>

  <sink>
    <name>bcin</name>
    <type>message</type>
    <nports>len($bc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>ucin</name>
    <type>message</type>
    <nports>len($uc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>rucin</name>
    <type>message</type>
    <nports>len($ruc_channels)</nports>
    <optional>1</optional>
  </sink>

  <sink>
    <name>fromMAC</name>
    <type>message</type>
    <nports>1</nports>
  </sink>

  <source>
    <name>bcout</name>
    <type>message</type>
    <nports>len($bc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>ucout</name>
    <type>message</type>
    <nports>len($uc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>rucout</name>
    <type>message</type>
    <nports>len($ruc_channels)</nports>
    <optional>1</optional>
  </source>

  <source>
    <name>toMAC</name>
    <type>message</type>
    <nports>1</nports>
  </source>
</block>
